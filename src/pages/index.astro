---
import Layout from "@/layouts/Layout.astro"

const sections = [
	{
		title: "Ежедневники",
		links: [
			{ href: "/aa", label: "Анонимные Алкоголики" },
			{ href: "/an", label: "Анонимные Наркоманы" },
			{ href: "/aa24", label: "Я и АА 24 часа" },
			{ href: "/aadays", label: "АА День за днем" },
			{ href: "/alanon", label: "Ал-Анон День за Днем" },
			{ href: "/alanonmm", label: "Ал-Анон Мужество Меняться" },
		],
	},
	{
		title: "Календари",
		links: [
			{ href: "/calendar", label: "Календарь АА" },
			{ href: "/calendar/aa", label: "Календарь АА (alias)" },
			{ href: "/calendar/an", label: "Календарь АН" },
			{ href: "/calendar/aa24", label: "Календарь Я и АА 24 часа" },
			{ href: "/calendar/aadays", label: "Календарь АА День за днем" },
			{ href: "/calendar/alanon", label: "Календарь Ал-Анон День за Днем" },
			{ href: "/calendar/alanonmm", label: "Календарь Ал-Анон Мужество Меняться" },
		],
	},
	{
		title: "Политики",
		links: [
			{ href: "/privacy", label: "Политика конфиденциальности" },
			{ href: "/terms", label: "Условия использования" },
			{ href: "/disclaimer", label: "Отказ от ответственности" },
		],
	},
	{
		title: "Личное",
		links: [{ href: "/bookmarks", label: "Мои закладки" }],
	},
]
---

<Layout
	title="Навигация по проекту"
	description="Все разделы проекта: ежедневники, календари и политики."
>
	<section class="rounded-3xl border border-[var(--border-soft)] bg-[var(--bg-surface)] p-6 sm:p-10">
		<h1 class="text-3xl font-semibold text-[var(--text-main)] sm:text-4xl">Навигация по проекту</h1>
		<p class="mt-3 text-[var(--text-muted)]">Быстрые ссылки на все основные страницы сайта.</p>

		<div class="mt-8 grid gap-6 md:grid-cols-2 xl:grid-cols-3">
			{
				sections.map(section => (
					<article class="rounded-2xl border border-[var(--border-soft)] bg-[var(--bg-page)] p-5">
						<h2 class="text-lg font-semibold text-[var(--text-main)]">{section.title}</h2>
						<ul class="mt-3 space-y-2">
							{section.links.map(link => (
								<li>
									<a
										href={link.href}
										class="text-[var(--text-muted)] underline underline-offset-4 transition-colors hover:text-[var(--accent)]"
									>
										{link.label}
									</a>
								</li>
							))}
						</ul>
					</article>
				))
			}
		</div>
	</section>
</Layout>
