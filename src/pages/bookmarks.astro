---
import SavedPosts from "@/components/SavedPosts.svelte"
import Layout from "@/layouts/Layout.astro"
---

<Layout title="Закладки" description="Сохраненные ежедневники пользователя.">
  <main class="mx-auto flex w-full max-w-6xl flex-col gap-6">
    <section class="rounded-3xl border border-[var(--border-soft)] bg-[var(--bg-surface)] p-6 sm:p-10">
      <h1 class="text-3xl font-semibold text-[var(--text-main)] sm:text-4xl">Закладки</h1>
      <p class="mt-3 text-[var(--text-muted)]">Сохраненные записи доступны только в этом браузере.</p>
      <div class="mt-8">
        <SavedPosts client:load />
      </div>
    </section>
  </main>
</Layout>
