<button
	id="theme-toggle"
	type="button"
	aria-label="Переключить тему"
	class="inline-flex items-center gap-2 rounded-full border border-[var(--border-soft)] bg-[var(--bg-elevated)] px-3 py-1.5 text-sm text-[var(--text-main)] transition-colors hover:bg-[var(--bg-soft)]"
>
	<span aria-hidden="true" id="theme-icon">◐</span>
	<span id="theme-label">Тема</span>
</button>

<script>
	const root = document.documentElement;
	const btn = document.getElementById("theme-toggle");
	const icon = document.getElementById("theme-icon");
	const label = document.getElementById("theme-label");
	const KEY = "theme-preference";

	const getTheme = () => {
		const saved = localStorage.getItem(KEY);
		if (saved === "dark" || saved === "light") return saved;
		return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
	};

	const setTheme = theme => {
		root.dataset.theme = theme;
		localStorage.setItem(KEY, theme);
		if (icon) icon.textContent = theme === "dark" ? "◑" : "◐";
		if (label) label.textContent = theme === "dark" ? "Dark" : "Light";
	};

	setTheme(getTheme());

	btn?.addEventListener("click", () => {
		const next = root.dataset.theme === "dark" ? "light" : "dark";
		setTheme(next);
	});
</script>
