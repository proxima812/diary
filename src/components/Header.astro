---
import Menu from "@/components/Menu/Menu.astro";
import BookmarksHeaderLink from "@/components/BookmarksHeaderLink.tsx";
import ThemeToggle from "@/components/ThemeToggle.astro";
import { calendarBooks } from "@/data/calendars";
import { Icon } from "astro-icon/components";
import Container from "./Container.astro";
import Logo from "./Logo.astro";
---

<header class="sticky top-0 z-40 border-b border-[var(--border-soft)] bg-[var(--bg-surface)]/95 py-4 backdrop-blur">
	<Container class="flex items-center justify-between gap-x-3">
		<a href="/" class="text-[var(--text-main)]"><Logo /></a>
		<Menu />
		<div class="flex items-center gap-2">
			<ThemeToggle />
			<BookmarksHeaderLink client:only="solid-js" />
		</div>
	</Container>
</header>
<div class="border-b border-[var(--border-soft)] bg-[var(--bg-page)] py-3">
	<Container class="flex flex-wrap items-center justify-center gap-2">
		{
			calendarBooks.map((book) => (
				<a
					href={book.calendarHref}
					class="inline-flex items-center gap-1 rounded-full border border-[var(--border-soft)] bg-[var(--bg-elevated)] px-3 py-1.5 text-sm text-[var(--text-main)] transition-colors hover:bg-[var(--bg-soft)]"
				>
					<Icon name="mdi:calendar-month-outline" class="text-base" />
					<span>{book.label}</span>
				</a>
			))
		}
	</Container>
</div>
