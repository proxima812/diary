---
import SavedPosts from "@/components/SavedPosts.tsx"
import Layout from "@/layouts/Layout.astro"
---

<Layout
	title="Закладки ежедневников"
	description="Сохраненные ежедневные записи АА, АН и Ал-Анон в вашем браузере."
	keywords="закладки ежедневников, аа закладки, ан закладки"
>
  <main class="mx-auto flex w-full max-w-6xl flex-col gap-6">
    <section class="rounded-3xl border border-[var(--border-soft)] bg-[var(--bg-surface)] p-6 sm:p-10">
      <h1 class="text-3xl font-semibold text-[var(--text-main)] sm:text-4xl">Закладки</h1>
      <p class="mt-3 text-[var(--text-muted)]">Сохраненные записи доступны только в этом браузере и на этом устройстве.</p>
      <div class="mt-8">
        <SavedPosts client:load />
      </div>
    </section>
  </main>
</Layout>
