{
  "rewrites": [
    {
      "source": "/:community(aa|an|aa24|aadays|alanon|alanonmm)/now",
      "destination": "/api/today?community=:community"
    }
  ],
  "headers": [
    {
      "source": "/(aa|an|alanon|alanonmm|aa24|aadays)/now",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, s-maxage=300, stale-while-revalidate=60" }
      ]
    },
    {
      "source": "/_astro/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, s-maxage=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)\\.(js|css|png|jpg|jpeg|webp|svg|ico|woff|woff2|ttf)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, s-maxage=31536000, immutable" }
      ]
    },
    
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, s-maxage=3600, stale-while-revalidate=86400" }
      ]
    }
  ]
}
